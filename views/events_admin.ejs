<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <title>Events</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <!-- External Links -->
    <% include ./partials/_indexLinks %>
    <% include ./partials/_indexScripts %>

  </head>


  <body>
    <header>
      <% include partials/_header %>
    </header>


    <div class="admin-header-event-information-sec">
      <h1 class="header-event-name"><%=data[0].title%></h1>
      <div>
          <img
            src="/images/friendship.png"
            alt="host-name-img"
            class="admin-page-event-img"
          />

          <label for="host-name"> <b>Host:</b></label>
          <span class="host-name"><%= data[0].name %></span>
        </div>


        <div>
            <img
              src="/images/pin.png"
              alt="location-img"
              class="admin-page-event-img"
            />
            <label for="event-location"><b>Location:</b></label>
            <span class="event-location"><%= data[0].address %></span>
          </div>


          <div>
              <img
                src="/images/pencils.png"
                alt="description-img"
                class="admin-page-event-img"
              />

              <label for="event-description"><b>Description:</b></label>
              <span class="event-description"><%=data[0].description%></span>
            </div>
            <div>
                <a href="#anchor-one" class="toggle-one-slide">
                  <img
                    src="/images/down-button.png"
                    alt="down-button"
                    class="admin-down-button-one"
                  />
                </a>
              </div>

  </div>


<div id="anchor-one">
<div class="admin-top-form-box">
    <img
    src="/images/step1.png"
    alt="description-img"
    class="step-buttons"
  />
  <div class="admin-page-msg">
      <p><b>Please fill in your information...</b></p>
    </div>

    <form class="form-box-final" method='POST' action= <%= `/events/${data[0].admin_token}` %> >
      <div >
        <label for='name'></label>
        <input type='text' name='name' placeholder="Enter name here">
      </div>
      <div>
        <label for='email'></label>
        <input type='email' name='email' placeholder="Enter email here">
      </div>
      <div>
        <button type="submit" id='guestInfo'></button>
      </div>
    </form>

    <div>
        <a href="#anchor-two">
          <img
            src="/images/down-button.png"
            alt="down-button"
            class="admin-down-button"
          />
        </a>
      </div>
</div>


<div class="time-slots-check-box">
<img src="/images/step2.png" alt="number-two-img" class="step-buttons" />
<p><b>Which sunny day would you like to attend...</b></p>
<% for (let i = 0; i < data.length; i++) { %>
        <div class="admin-page-msg">
          <div class="form-check">
            <input
              name='availability'
              id="<%= data[i].id %>"
              type="checkbox"
              value="T/F"
            />
            <% if (moment(data[i].start_date_time).format("MM/DD/YY") === moment(data[i].end_date_time).format("MM/DD/YY")) { %>
            <label class="form-check-label" for="defaultCheck1">
              <%= `${moment(data[i].start_date_time).format("MM/DD/YY")} ${moment(data[i].start_date_time).format("hh:mm A")} - ${moment(data[i].end_date_time).format("hh:mm A")}`%>
            </label>
            <%= `${moment(data[i].start_date_time).format("hh:mm A")} - ${moment(data[i].end_date_time).format("hh:mm A")}`%>
            <%= console.log("*************************************", `${moment(data[i].start_date_time).format("hh:mm A")} - ${moment(data[i].end_date_time).format("hh:mm A")}`) %>
            <% } else { %>
              <label class="form-check-label" for="defaultCheck1">
                  <%= `${moment(data[i].start_date_time).format("MM/DD/YY")} ${moment(data[i].start_date_time).format("hh:mm A")} - ${moment(data[i].end_date_time).format("MM/DD/YY")} ${moment(data[i].end_date_time).format("hh:mm A")}` %>
              </label>
            <% } %>
          </div>
        </div>
        <% } %>
        <button id='after_true_false'>Go</button>

 <!-- Dive with form to fill in user name and email -->


<!-- Div for the choosing availability table -->
<div class="admin-rsvp-table">
    <img src="/images/step3.png" alt="number-two-img" class="step-buttons" />

      <table border="1" style="width:100%">
        <tr>
          <th>Name:</th>
          <% for (let i = 0; i < data.length; i++) { %>
            <% if (moment(data[i].start_date_time).format("MM/DD/YY") === moment(data[i].end_date_time).format("MM/DD/YY")) { %>
          <th class='time_heading'><%= `${moment(data[i].start_date_time).format("MM/DD/YY")}
            ${moment(data[i].start_date_time).format("hh:mm A")} - ${moment(data[i].end_date_time).format("hh:mm A")}` %></th>
            <%} else {%>
          <th class='time_heading'><%= `${moment(data[i].start_date_time).format("MM/DD/YY")} ${moment(data[i].start_date_time).format("hh:mm A")} - ${moment(data[i].end_date_time).format("MM/DD/YY")} ${moment(data[i].end_date_time).format("hh:mm A")}` %></th>
            <% } %>
          <% } %>

      </tr>
      <tr>
        <td><%= data[0].name %></td>
        <td>T</td>
        <td>T</td>
        <td>F</td>
      </tr>
      <tr>
        <td>Guest 2 Name</td>
        <td>T</td>
        <td>F</td>
        <td>F</td>
      </tr>
        <tr>
          <td>Guest 3 Name</td>
          <td>F</td>
          <td>T</td>
          <td>T</td>
        </tr>
    </table>

    <div id="true_false">

    </div>


    <!-- Div for the showing availability table with users -->

    <!-- includes Bootstrap/JQuery JS -->
    <!-- <% include ./partials/_indexScripts %> -->

  </body>
</html>
