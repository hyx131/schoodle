<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Create Event</title>

    <!-- includes CSS/Bootstrap styles -->
    <% include ./partials/_indexLink %>
  </head>

  <body>
    <header>
      <% include partials/_header %>
    </header>
    <main>
      <div><h1>Create Your Event</h1></div>
      <form class="create-new-events" action="/" method="POST">
        <div>
          <!-- /* Move all the styling over to the SCSS FILE, these are just here for now */ -->

          <label for="title">Title of the Event</label>
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Enter Here"
            style="width: 300px; margin: 1em"
          />
          <!-- /* Move all the styling over to the SCSS FILE, these are just here for now */ -->

          <label for="descriptions">Description</label>
          <input
            class="form-control"
            type="text"
            name="description"
            placeholder="Enter Here"
            style="width: 300px; margin: 1em"
          />
          <!-- /* Move all the styling over to the SCSS FILE, these are just here for now */ -->

          <label for="location">Location</label>
          <input
            class="form-control"
            type="text"
            name="Location"
            placeholder="Enter Here"
            style="width: 300px; margin: 1em"
          />
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <!-- /* Move all the styling over to the SCSS FILE, these are just here for visual purposes */ -->

        <div>
          <h1>DROP DOWN EFFECT Calendar</h1>

          <form method="POST" action='/'>
            <input type="text" id="pick_date" placeholder="Please select Date Time">


            <section class='time_slots'>
                <input type='text' id='start_time' placeholder='start time'>
                <input type='text' id='end_time' placeholder='end time'>
            </section>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>

        <!-- /* Move all the styling over to the SCSS FILE, these are just here for now */ -->

        <div>
          <h1>DROP DOWN EFFECT <b>INVITES</b></h1>
          <label for="invites">Invites</label>
          <input
            class="form-control"
            type="text"
            name="invites"
            placeholder="Enter Email Here"
            style="width: 300px; margin: 1em"
          />
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </main>

    <!-- includes Bootstrap/JQuery JS -->
    <% include ./partials/_indexScripts %>

    <!-- Client side jquery for calendar -->
    <script>
      $("#pick_date").flatpickr({
        mode: "multiple",
        inline: true,
        altInput: true,
        altFormat: "F j, Y",
        dateFormat: "Y-m-d",
        "disable": [
          function(date) {
            let today = new Date();
              today.setHours(0,0,0,0);
              return (date < today); //disable past dates >> return true to disable
          }
        ]
      });

      $("#start_time").flatpickr({
        inline: true,
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
      });

      $("#end_time").flatpickr({
        inline: true,
        enableTime: true,
        noCalendar: true,
        dateFormat: "H:i",
      });
    </script>

  </body>
</html>
